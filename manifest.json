{
    "manifest_version": 3,
    "name": "Attribution Copy",
    "version": "1.0",
    "permissions": [
        "activeTab",
        "clipboardWrite"
    ],
    "host_permissions": [
        "*://*.wikipedia.org/*",
        "*://*.wikimedia.org/*"
    ],
    "background": {
        "service_worker": "background.js"
    },
    "content_scripts": [
        {
            "matches": [
                "*://*.wikipedia.org/*"
            ],
            "js": [
                "content.js"
            ]
        }
    ]
}
